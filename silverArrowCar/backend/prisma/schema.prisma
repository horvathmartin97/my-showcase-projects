
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  email String @unique
  name String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  garage Garage[]
  cars Car[]
  role Role @default(USER)
}
model Car {
  id String @id @default(cuid())
  carModel String
  carBrand String
  builtYear Int
  price Float
  kilometersDriven Int
  currency String
  description String?
  image String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy User @relation(fields: [createdById], references: [id])
  createdById String
}
model Garage {
  id String @id @default(cuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  carModel String
  carBrand String
  builtYear Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
enum Role {
  USER
  ADMIN
}